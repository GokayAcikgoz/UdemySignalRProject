@model SignalRWebUI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" enctype="multipart/form-data">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Ürün Adını Giriniz</label>
								<input type="text" class="form-control" id="productname" asp-for="ProductName">
							</div>
							<div class="form-group">
								<label for="price">Ürün Fiyatını Giriniz</label>
								<input type="text" class="form-control" id="price" asp-for="Price">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Ürün Görselini Giriniz</label>
								<input type="file" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="price">Ürün Kategorisini Seçiniz</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryItems, new{ @class="form-control"})
							</div>
							<div class="form-group">
								<label for="description">Ürün Açıklamasını Giriniz</label>
								<input type="text" class="form-control" id="description" asp-for="Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ürünü Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

