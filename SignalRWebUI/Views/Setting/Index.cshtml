@model SignalRWebUI.Dtos.IdentityDtos.UserEditDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil Ayarları</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Adınız</label>
								<input type="text" class="form-control" id="Name" asp-for="Name">
							</div>
							<div class="form-group">
								<label for="Surname">Soyadınız</label>
								<input type="text" class="form-control" id="Surname" asp-for="Surname">
							</div>
							<div class="form-group">
								<label for="Username">Kullanıcı Adınız</label>
								<input type="text" class="form-control" id="Username" asp-for="Username">
							</div>
							<div class="form-group">
								<label for="Mail">Email</label>
								<input type="email" class="form-control" id="Mail" asp-for="Mail">
							</div>
							<div class="form-group">
								<label for="Password">Şifreniz</label>
								<input type="password" class="form-control" id="Password" asp-for="Password">
							</div>
							<div class="form-group">
								<label for="ConfirmPassword">Şifrenizi Onaylayın</label>
								<input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Bilgileri Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

