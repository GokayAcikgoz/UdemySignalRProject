@model SignalRWebUI.Dtos.SliderDtos.UpdateSliderDto
@{
	ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
						</div>
						<input type="hidden" asp-for="SliderID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title1">Birinci Başlığı Giriniz</label>
								<input type="text" class="form-control" id="Title1" asp-for="Title1">
							</div>
							<div class="form-group">
								<label for="Title2">İkinci Başlığı Giriniz</label>
								<input type="text" class="form-control" id="Title2" asp-for="Title2">
							</div>
							<div class="form-group">
								<label for="Title3">Üçüncü Başlığı Giriniz</label>
								<input type="text" class="form-control" id="Title3" asp-for="Title3">
							</div>
							<div class="form-group">
								<label for="Description1">Birinci Açıklamayı Giriniz</label>
								<input type="text" class="form-control" id="Description1" asp-for="Description1">
							</div>
							<div class="form-group">
								<label for="Description2">İkinci Açıklamayı Giriniz</label>
								<input type="text" class="form-control" id="Description2" asp-for="Description2">
							</div>
							<div class="form-group">
								<label for="Description3">Üçüncü Açıklamayı Giriniz</label>
								<input type="text" class="form-control" id="Description3" asp-for="Description3">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Öne Çıkan Alanı Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

