@model SignalRWebUI.Dtos.AboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızıda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="AboutID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlığı Giriniz</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Görselin Url'ini' Giriniz</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label for="Description">Açıklamayı Giriniz</label>
								<textarea rows="5" class="form-control" id="Description" asp-for="Description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımda Yazısı Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

